{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "lib": [
      "ES2015",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "*.stories.tsx",
    "*.spec.ts",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}